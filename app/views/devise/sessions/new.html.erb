<%# データベースに異常発生で、やり直し202210061155 %>

<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「ログイン機能へのパス」は、devise導入後にrails routesを実行してdevise/sessions#createへのパスを確認し、記載してください。 %>
        <%# <%= form_with model: モデル名, url: ログイン機能へのパス, local: true do |f| %>
        <%= form_with model: @user , url: user_session_path, method: :post, local: true do |f| %> <!--@userモデル、user_sessionパスへ修正、postメソッドのHTTP 202210041550!-->

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />                                                                          <!-- :hoge を :emailへ !-->
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>                                 <!-- :hoge を :emailへ !-->
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />                                                                <!-- :hoge を :passwordへ !-->
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>                                  <!-- :hoge を :passwordへ !-->
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>